<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc" 
   displayBlock="true">
   <Shell>
    <App class="myAppDemoWT">
      <pages>
      <Page title="{i18n>homePageTitle}" showNavButton="true">
        <subHeader>
          <OverflowToolbar>
            <Text text="{i18n>homePageSubTitle}"/>
          </OverflowToolbar>
        </subHeader>
        <content>
          <Panel 
            headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
            <content>
              <Button
                text="{i18n>showHelloButtonText}" 
                press=".onShowHello"
                class="myCustomButton"/>
              <Input 
                value="{MiModelo>/recipient/name}" 
                description="Hello {MiModelo>/recipient/name}" 
                valueLiveUpdate="true" 
                width="60%"/>
              <FormattedText 
                htmlText="Hello {MiModelo>/recipient/name}"
								class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
            </content>
          </Panel>
        </content>
      </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>